{{!< default}}

{{#post}}
<article class="page">
    {{#unless @page.show_title_and_feature_image}}
    <header class="post-header">
        {{#if feature_image}}
        <img class="post-feature-image" src="{{img_url feature_image}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
        {{/if}}
        <h1 class="post-title">{{title}}</h1>
    </header>
    {{/unless}}

    <div class="post-content">
        {{content}}
    </div>
</article>
{{/post}}
