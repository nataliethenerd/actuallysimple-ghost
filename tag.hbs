{{!< default}}

{{#tag}}
<header class="archive-header">
    <h1 class="archive-title">Tag: {{name}}</h1>
    {{#if description}}
    <p class="archive-description">{{description}}</p>
    {{/if}}
</header>
{{/tag}}

<div class="post-list">
{{#foreach posts}}
<article class="post-item">
    <div class="post-item-content">
        {{#if feature_image}}
        <div class="post-item-thumbnail">
            <a href="{{url}}">
                <img src="{{feature_image}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
            </a>
        </div>
        {{/if}}
        <div class="post-item-text">
            <h2 class="post-title">
                <a href="{{url}}">{{title}}</a>
            </h2>
            <div class="post-meta">
                <time class="date" datetime="{{date format='YYYY-MM-DD'}}">
                    {{date format="MMMM DD, YYYY"}}
                </time>
            </div>
            {{#if excerpt}}
            <div class="post-excerpt">
                {{excerpt words="50"}}...
            </div>
            {{/if}}
        </div>
    </div>
</article>
{{/foreach}}
</div>

<div class="pagination">
    {{pagination}}
</div>
